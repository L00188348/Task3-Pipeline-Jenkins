{
  "name": "task3-pipeline-jenkins",
  "version": "1.0.0",
  "description": "Task Management API with complete CI/CD Pipeline",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "echo 'No build step required for backend' && exit 0",
    
    "test": "jest --verbose --coverage --forceExit --detectOpenHandles --testTimeout=15000",
    "test:db": "jest tests/database.test.js --verbose --coverage --forceExit --detectOpenHandles --testTimeout=10000",
    "test:api": "jest tests/app.test.js --testPathIgnorePatterns=tests/app.test.js --testNamePattern='Health Check|Task CRUD Operations|Task Filtering by Status' --verbose --coverage --forceExit --detectOpenHandles --testTimeout=10000",
    "test:api:all": "jest tests/app.test.js --verbose --coverage --forceExit --detectOpenHandles --testTimeout=15000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    
    "security": "npm audit --audit-level moderate",
    
    "init-db": "node init-database.js"
  },
  "keywords": [
    "api",
    "tasks",
    "ci-cd",
    "jenkins",
    "express"
  ],
  "author": "Romulo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "forceExit": true,
    "detectOpenHandles": true,
    "testTimeout": 15000
  }
}